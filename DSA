        // System.out.println("enter the second string");
        // String s2 = scan.nextLine();
        
        //for Copy the String
        // String c = copyString(s);
        //  System.out.println("Copy string" + c);
        
        
        // for Concat the string
        // String c = concatString(s1,s2);
        // System.out.println("Concat string" +" "+ c);
        
        
         //for the Length of String
